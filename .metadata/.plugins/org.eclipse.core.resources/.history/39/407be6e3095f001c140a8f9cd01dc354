package com.pizzahut.dao;

import java.sql.Statement;
import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import com.pizzahut.model.Product;

public class Productdao {

	public List<Product> showProduct()
	{
		List<Product> productsList=new ArrayList<Product>();
		String prod="select * from products";
		ConnectionUtill con=new ConnectionUtill();
		Connection c=con.getDbconnection();
		try {
			Statement stmt=c.createStatement();
			ResultSet rs=stmt.executeQuery(prod);
			while(rs.next())
			{
				Product products=new Product(rs.getString(1),rs.getString(2),Double.parseDouble(rs.getString(3)));
				productsList.add(products);	
			}
		} catch (SQLException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}

		return showProduct();
}
}